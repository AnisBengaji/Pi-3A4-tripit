<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="536.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeti.Controllers.AjouterTutorial">

    <VBox alignment="CENTER" layoutY="2.0" prefWidth="600.0" spacing="20">
        <Label text="Ajouter un Tutoriel" textFill="#006d77">
            <font>
                <Font size="30.0" />
            </font>
        </Label>

        <!-- Champs de saisie -->
        <TextField fx:id="nomTutorialField" promptText="Nom du tutoriel" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white;" />
        <DatePicker fx:id="dateDebutField" promptText="Date de début" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white;" />
        <DatePicker fx:id="dateFinField" promptText="Date de fin" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white;" />
        <TextField fx:id="prixField" promptText="Prix" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white;" />
        <TextField fx:id="offreField" promptText="Offre associée" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white;" />

        <!-- Bouton sauvegarder -->
        <Button onAction="#sauvegarderTutorial" style="-fx-background-color: #006D77; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 20;" text="Sauvegarder" />

        <!-- TableView des tutoriels -->
        <TableView fx:id="tutorialTable" prefHeight="250.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="colNom" prefWidth="120.0" text="Nom" />
                <TableColumn fx:id="colDebut" prefWidth="120.0" text="Date Début" />
                <TableColumn fx:id="colFin" prefWidth="120.0" text="Date Fin" />
                <TableColumn fx:id="colPrix" prefWidth="80.0" text="Prix" />
                <TableColumn fx:id="colOffre" prefWidth="150.0" text="Offre" />
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
