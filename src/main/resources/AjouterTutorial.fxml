<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="536.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeti.Controlleurs.AjouterTutorial">

    <VBox alignment="CENTER" prefHeight="698.0" prefWidth="500.0" spacing="20" AnchorPane.bottomAnchor="85.0" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="20">
        <!-- Titre de l'interface -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Ajouter un nouveau tutoriel" />

        <!-- Formulaire de saisie -->
        <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;">
            <Label text="Nom du tutoriel:" />
            <TextField fx:id="nomTutorialField" promptText="Entrez le nom du tutoriel" />

            <Label text="Date de début:" />
            <DatePicker fx:id="dateDebutField" />

            <Label text="Date de fin:" />
            <DatePicker fx:id="dateFinField" />

            <Label text="Prix:" />
            <TextField fx:id="prixField" promptText="Entrez le prix" />

            <Label text="Offre associée:" />
            <TextField fx:id="offreField" promptText="Entrez l'offre associée" />
        </VBox>

        <Button onAction="#sauvegarderTutorial" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Sauvegarder le tutoriel" />

      
    </VBox>


</AnchorPane>
