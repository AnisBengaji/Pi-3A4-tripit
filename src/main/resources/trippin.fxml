<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.projeti.Controlleurs.trippin">

    <!-- Menu latÃ©ral -->
    <left>
        <VBox spacing="15" alignment="TOP_LEFT" style="-fx-background-color: #006D77; -fx-padding: 20;">
            <Label text="Trippin" style="-fx-font-size: 24px; -fx-text-fill: white;" />
            <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="All Trips" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Travels" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Rooms" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Transport" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Events" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Offers" style="-fx-background-color: transparent; -fx-text-fill: white;" />
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <!-- Barre de recherche -->
            <TextField promptText="Where to go?" style="-fx-pref-width: 400px; -fx-padding: 10;" />

            <!-- Grille de destinations -->
            <GridPane hgap="20" vgap="20">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS" />
                </rowConstraints>

                <!-- Exemples de cartes destinations -->
                <VBox GridPane.columnIndex="0" spacing="10">
                    <ImageView fitWidth="200" fitHeight="150" />
                    <Label text="Rome, Italy" />
                    <Label text="$3,42k" />
                </VBox>

                <VBox GridPane.columnIndex="1" spacing="10">
                    <ImageView fitWidth="200" fitHeight="150" />
                    <Label text="London, UK" />
                    <Label text="$4,2k" />
                </VBox>

                <VBox GridPane.columnIndex="2" spacing="10">
                    <ImageView fitWidth="200" fitHeight="150" />
                    <Label text="Full Europe" />
                    <Label text="$5k" />
                </VBox>
            </GridPane>

            <!-- Section promotionnelle -->
            <HBox spacing="20" alignment="CENTER">
                <VBox spacing="10">
                    <Label text="Travel, enjoy and live a new and full life" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <Button text="Find out more" />
                </VBox>
                <ImageView fitWidth="200" fitHeight="200" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
