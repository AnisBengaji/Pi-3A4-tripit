<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="562.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeti.controller.ActivityDetailsController">
    <children>
        <!-- Activity details pane -->
        <VBox layoutX="20.0" layoutY="20.0" spacing="10">
            <Label fx:id="lblName" style="-fx-font-size: 24px;" text="Activity Name" />
            <Label fx:id="lblType" text="Type" />
            <Label fx:id="lblDescription" text="Description" />
            <Label fx:id="lblPrice" text="Price" />
            <Label fx:id="lblDate" text="Date" />
            <Label fx:id="lblDestination" text="Destination" />
            <Label fx:id="lblWeather" text="Weather:" />
            <Label fx:id="lblMinTemp" text="Min Temp:" />
            <Label fx:id="lblMaxTemp" text="Max Temp:" />
            <Label fx:id="lblCondition" text="Condition:" />
        </VBox>
        <!-- Image slider pane -->
        <HBox alignment="CENTER" layoutX="20.0" layoutY="300.0" spacing="10">
            <Button fx:id="btnPrev" onAction="#prevImage" text="&lt;" />
            <ImageView fx:id="imageViewSlider" fitHeight="300" fitWidth="400" preserveRatio="true" />
            <Button fx:id="btnNext" onAction="#nextImage" text="&gt;" />
        </HBox>
      <Button layoutX="457.0" layoutY="20.0" mnemonicParsing="false" onAction="#retour" text="Retour" />
    </children>
</AnchorPane>
