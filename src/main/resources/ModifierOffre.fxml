<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="737.0" prefWidth="582.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeti.controllers.ModifierOffreController">

    <VBox alignment="CENTER" prefHeight="737.0" prefWidth="675.0" spacing="20">

        <!-- Titre -->
        <Label text="Modifier ou Supprimer une Offre" textFill="#006d77">
            <font>
                <Font size="30.0" />
            </font>
        </Label>

        <!-- Champs de texte pour modification -->
        <TextField fx:id="txtTitre" prefWidth="400.0" promptText="Titre de l'offre" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white; -fx-prompt-text-fill: #aaa;" />

        <TextField fx:id="txtDescription" prefWidth="400.0" promptText="Description" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white; -fx-prompt-text-fill: #aaa;" />

        <TextField fx:id="txtPrix" prefWidth="400.0" promptText="Prix (€)" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white; -fx-prompt-text-fill: #aaa;" />

        <TextField fx:id="txtTutorial" prefWidth="400.0" promptText="Tutoriel" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white; -fx-prompt-text-fill: #aaa;" />

        <TextField fx:id="txtDestination" prefWidth="400.0" promptText="Destination" style="-fx-background-radius: 10; -fx-padding: 10; -fx-background-color: #006D77; -fx-text-fill: white; -fx-prompt-text-fill: #aaa;" />

        <!-- Boutons d'action -->
        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleModifierOffre" style="-fx-background-color: #006D77; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 20;" text="Modifier" />
            <Button onAction="#handleSupprimerOffre" style="-fx-background-color: #006D77; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 20;" text="Supprimer" />
        </HBox>

        <!-- TableView pour afficher les offres -->
        <TableView fx:id="tableView" prefHeight="250.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="colTitre" prefWidth="120.0" text="Titre" />
                <TableColumn fx:id="colDescription" prefWidth="180.0" text="Description" />
                <TableColumn fx:id="colPrix" prefWidth="100.0" text="Prix (€)" />
                <TableColumn fx:id="colTutorial" prefWidth="100.0" text="Tutoriel" />
                <TableColumn fx:id="colDestination" prefWidth="100.0" text="Destination" />
            </columns>
        </TableView>
        <Button layoutX="294.0" layoutY="405.0" onAction="#afficherAjouterOffre" style="-fx-background-color: #006D77; -fx-text-fill: white; -fx-font-size: 14px;" text="retour" />

    </VBox>
</AnchorPane>
