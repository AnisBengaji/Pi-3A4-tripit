<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="anchor_container" stylesheets="@styleSignin.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeti.Controlleurs.TutorialDetailController">

    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="949.0" spacing="15" styleClass="container">
            <children>
                <!-- Titre -->
                <Label styleClass="title" text="Gestion des Tutoriels" />

                <!-- Barre de recherche YouTube -->
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <TextField fx:id="searchField" promptText="Rechercher un tutoriel sur YouTube..." />
                        <Button fx:id="searchButton" styleClass="btn-search" text="Rechercher" />
                    </children>
                </HBox>

                <!-- TableView pour afficher les tutoriels -->
                <TableView fx:id="tableView" prefHeight="450.0" prefWidth="780.0">
                    <columns>
                        <TableColumn fx:id="colNomTutorial" prefWidth="200.0" text="Nom du tutoriel" />
                        <TableColumn fx:id="colDateDebut" prefWidth="120.0" text="Date de début" />
                        <TableColumn fx:id="colDateFin" prefWidth="120.0" text="Date de fin" />
                        <TableColumn fx:id="colPrixTutorial" prefWidth="100.0" text="Prix (€)" />
                        <TableColumn fx:id="colOffre" prefWidth="175.0" text="Offre associée" />
                        <TableColumn fx:id="colActions" prefWidth="120.0" text="Supprimer" />
                        <TableColumn fx:id="colUpdate" prefWidth="120.0" text="Modifier" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
