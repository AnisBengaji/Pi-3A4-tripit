<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.projeti.Controlleurs.EvenementController">
    <children>
        <!-- Formulaire de saisie -->
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtType" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Date Evenement:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="txtDateEvenement" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Lieu:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtLieu" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextArea fx:id="txtDescription" prefRowCount="3" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Price:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPrice" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <!-- TableView pour afficher les événements -->
        <TableView fx:id="tableEvenement" prefHeight="200">
            <columns>
                <TableColumn text="ID" fx:id="colId" prefWidth="75"/>
                <TableColumn text="Type" fx:id="colType" prefWidth="100"/>
                <TableColumn text="Date" fx:id="colDate" prefWidth="100"/>
                <TableColumn text="Lieu" fx:id="colLieu" prefWidth="100"/>
                <TableColumn text="Description" fx:id="colDescription" prefWidth="150"/>
                <TableColumn text="Price" fx:id="colPrice" prefWidth="75"/>
            </columns>
        </TableView>

        <!-- Boutons d'action -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Add" fx:id="btnAdd"/>
            <Button text="Update" fx:id="btnUpdate"/>
            <Button text="Delete" fx:id="btnDelete"/>
            <Button text="Clear" fx:id="btnClear"/>
        </HBox>
    </children>
</VBox>