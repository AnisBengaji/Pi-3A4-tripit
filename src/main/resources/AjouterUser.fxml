<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="803.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.projeti.controllers.UserController">

    <VBox alignment="CENTER" prefWidth="600" spacing="20"
          AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50" AnchorPane.topAnchor="20">

        <!-- Titre de l'interface -->
        <Label text="Gestion des Utilisateurs"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

        <!-- Formulaire de saisie -->
        <VBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #cccccc;
                     -fx-border-radius: 5; -fx-background-radius: 5;">
            <Label text="Nom :" />
            <TextField fx:id="nomField" promptText="Entrez le nom" />

            <Label text="prenom :" />
            <TextField fx:id="prenomField" promptText="Entrez le prénom" />

            <Label text="Numéro de Téléphone :" />
            <TextField fx:id="numTelField" promptText="Entrez le numéro de téléphone" />

            <Label text="Email :" />
            <TextField fx:id="emailField" promptText="Entrez l'email" />

            <Label text="Mot de Passe :" />
            <PasswordField fx:id="mdpField" promptText="Entrez le mot de passe" />

            <Label text="Rôle :" />
            <TextField fx:id="roleField" promptText="Entrez le rôle" />
        </VBox>

        <!-- Bouton de sauvegarde -->
        <Button text="Sauvegarder l'utilisateur" onAction="#handleSaveUser"
                style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />


    </VBox>

</AnchorPane>
